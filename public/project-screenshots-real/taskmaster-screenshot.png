<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1c1917;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#292524;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="card" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#44403c;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#292524;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Fondo -->
  <rect width="100%" height="100%" fill="url(#bg)"/>
  
  <!-- Header -->
  <g transform="translate(20, 20)">
    <text x="0" y="25" font-family="Arial, sans-serif" font-size="20" fill="white" font-weight="bold">
      TaskMaster Pro
    </text>
    <text x="0" y="40" font-family="Arial, sans-serif" font-size="12" fill="#f59e0b">
      Organiza tu Vida
    </text>
  </g>
  
  <!-- Barra de búsqueda -->
  <g transform="translate(20, 60)">
    <rect x="0" y="0" width="200" height="30" rx="15" fill="#44403c" stroke="#6b7280" stroke-width="1"/>
    <text x="15" y="20" font-family="Arial, sans-serif" font-size="12" fill="#9ca3af">
      Buscar tareas...
    </text>
    <circle cx="180" cy="15" r="8" fill="#f59e0b"/>
    <text x="180" y="19" font-family="Arial, sans-serif" font-size="8" fill="white" text-anchor="middle">🔍</text>
  </g>
  
  <!-- Botón agregar tarea -->
  <g transform="translate(240, 60)">
    <rect x="0" y="0" width="100" height="30" rx="15" fill="#f59e0b"/>
    <text x="50" y="20" font-family="Arial, sans-serif" font-size="12" fill="white" text-anchor="middle">+ Nueva Tarea</text>
  </g>
  
  <!-- Filtros -->
  <g transform="translate(20, 100)">
    <rect x="0" y="0" width="60" height="25" rx="12" fill="#f59e0b"/>
    <text x="30" y="16" font-family="Arial, sans-serif" font-size="10" fill="white" text-anchor="middle">Todas</text>
    
    <rect x="70" y="0" width="60" height="25" rx="12" fill="transparent" stroke="#6b7280" stroke-width="1"/>
    <text x="100" y="16" font-family="Arial, sans-serif" font-size="10" fill="#9ca3af" text-anchor="middle">Pendientes</text>
    
    <rect x="140" y="0" width="60" height="25" rx="12" fill="transparent" stroke="#6b7280" stroke-width="1"/>
    <text x="170" y="16" font-family="Arial, sans-serif" font-size="10" fill="#9ca3af" text-anchor="middle">Completadas</text>
  </g>
  
  <!-- Lista de tareas -->
  <g transform="translate(20, 140)">
    <!-- Tarea 1 - Alta prioridad -->
    <rect x="0" y="0" width="360" height="40" rx="8" fill="url(#card)" stroke="#ef4444" stroke-width="2"/>
    <circle cx="20" cy="20" r="8" fill="transparent" stroke="#6b7280" stroke-width="2"/>
    <text x="35" y="25" font-family="Arial, sans-serif" font-size="12" fill="white">Completar proyecto de portfolio</text>
    <text x="35" y="35" font-family="Arial, sans-serif" font-size="10" fill="#ef4444">Alta prioridad</text>
    <text x="320" y="25" font-family="Arial, sans-serif" font-size="10" fill="#9ca3af">Hoy</text>
    
    <!-- Tarea 2 - Media prioridad -->
    <rect x="0" y="50" width="360" height="40" rx="8" fill="url(#card)" stroke="#f59e0b" stroke-width="2"/>
    <circle cx="20" cy="70" r="8" fill="transparent" stroke="#6b7280" stroke-width="2"/>
    <text x="35" y="75" font-family="Arial, sans-serif" font-size="12" fill="white">Revisar emails pendientes</text>
    <text x="35" y="85" font-family="Arial, sans-serif" font-size="10" fill="#f59e0b">Media prioridad</text>
    <text x="320" y="75" font-family="Arial, sans-serif" font-size="10" fill="#9ca3af">Mañana</text>
    
    <!-- Tarea 3 - Completada -->
    <rect x="0" y="100" width="360" height="40" rx="8" fill="url(#card)" stroke="#10b981" stroke-width="2"/>
    <circle cx="20" cy="120" r="8" fill="#10b981"/>
    <text x="20" y="125" font-family="Arial, sans-serif" font-size="8" fill="white" text-anchor="middle">✓</text>
    <text x="35" y="125" font-family="Arial, sans-serif" font-size="12" fill="#6b7280" text-decoration="line-through">Actualizar documentación</text>
    <text x="35" y="135" font-family="Arial, sans-serif" font-size="10" fill="#10b981">Completada</text>
    <text x="320" y="125" font-family="Arial, sans-serif" font-size="10" fill="#9ca3af">Ayer</text>
    
    <!-- Tarea 4 - Baja prioridad -->
    <rect x="0" y="150" width="360" height="40" rx="8" fill="url(#card)" stroke="#6b7280" stroke-width="2"/>
    <circle cx="20" cy="170" r="8" fill="transparent" stroke="#6b7280" stroke-width="2"/>
    <text x="35" y="175" font-family="Arial, sans-serif" font-size="12" fill="white">Organizar archivos del escritorio</text>
    <text x="35" y="185" font-family="Arial, sans-serif" font-size="10" fill="#6b7280">Baja prioridad</text>
    <text x="320" y="175" font-family="Arial, sans-serif" font-size="10" fill="#9ca3af">Esta semana</text>
  </g>
  
  <!-- Estadísticas -->
  <g transform="translate(20, 250)">
    <rect x="0" y="0" width="80" height="30" rx="15" fill="#10b981"/>
    <text x="40" y="20" font-family="Arial, sans-serif" font-size="12" fill="white" text-anchor="middle">✓ 1 Completada</text>
    
    <rect x="90" y="0" width="80" height="30" rx="15" fill="#f59e0b"/>
    <text x="130" y="20" font-family="Arial, sans-serif" font-size="12" fill="white" text-anchor="middle">⏳ 3 Pendientes</text>
    
    <rect x="180" y="0" width="80" height="30" rx="15" fill="#6b7280"/>
    <text x="220" y="20" font-family="Arial, sans-serif" font-size="12" fill="white" text-anchor="middle">📊 25% Progreso</text>
  </g>
</svg>