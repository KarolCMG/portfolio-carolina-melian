{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "api/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "JWT_SECRET": "portfolio-secret-key-production",
    "ADMIN_USERNAME": "admin",
    "ADMIN_PASSWORD": "admin123",
    "ALLOWED_ORIGINS": "https://carolina-melian-portfolio.netlify.app"
  }
}
